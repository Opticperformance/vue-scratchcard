{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": [
    "src/*.ts",
    "src/*.d.ts",
    "example/*.ts",
    "example/*.vue",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}